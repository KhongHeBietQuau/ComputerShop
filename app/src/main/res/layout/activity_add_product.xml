<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.addProduct.addProductActivity">
    <LinearLayout
        android:id="@+id/app_bar_layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_app"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:src="@drawable/arrow_app" />

        <TextView
            android:id="@+id/txt_name_user_friend"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="60dp"
            android:text="Thêm sản phẩm"
            android:textAlignment="center"
            android:textColor="@color/color_app"
            android:textSize="20sp">

        </TextView>
    </LinearLayout>
        <ImageView
            android:id="@+id/imgView"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/btnChoose"
            android:layout_gravity="center"
            android:text="Choose"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Tên sản phẩm"/>
                        <EditText
                            android:id="@+id/price_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Giá mới"/>
                        <EditText
                            android:id="@+id/price_old"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Giá cũ"/>
                        <EditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Mô tả"/>
                        <EditText
                            android:id="@+id/cpu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="CPU"/>
                        <EditText
                            android:id="@+id/ram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="RAM"/>
                        <EditText
                            android:id="@+id/hard_drive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Ổ cứng"/>
                        <EditText
                            android:id="@+id/graphics_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Card đồ họa"/>
                        <EditText
                            android:id="@+id/screen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Màn hình"/>
                        <EditText
                            android:id="@+id/precent_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Phần trăm giảm giá"/>
                        <EditText
                            android:id="@+id/current_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Số lượng"/>
                        <EditText
                            android:id="@+id/warranty_period"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="6dp"
                            android:hint="Thời gian bảo hành(theo tháng)"/>
                    </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        <Button
            android:id="@+id/btnUpload"
            android:layout_gravity="center"
            android:text="Upload"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

</LinearLayout>